---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AsciiCard from '../../components/AsciiCard.astro';
import asciiArts from '../../data/ascii-arts.json';
import categories from '../../data/categories.json';

export async function getStaticPaths() {
  return asciiArts.arts.map((art) => ({
    params: { id: art.id },
    props: { art },
  }));
}

const { art } = Astro.props;
const category = categories.categories.find((c) => c.slug === art.category);
const relatedArts = asciiArts.arts
  .filter((a) => a.category === art.category && a.id !== art.id)
  .slice(0, 6);

const title = `${art.title} ASCII Art - Copy & Paste | ASCII Art Gallery`;
const description = `Copy ${art.title} ASCII art for free. Perfect for Discord, social media, and messaging. One-click copy!`;
---

<BaseLayout title={title} description={description}>
  <!-- Breadcrumb -->
  <nav class="text-sm text-gray-500 mb-6">
    <a href="/" class="hover:text-gray-700">Home</a>
    <span class="mx-2">/</span>
    <a href={`/category/${art.category}`} class="hover:text-gray-700">{category?.name}</a>
    <span class="mx-2">/</span>
    <span class="text-gray-900">{art.title}</span>
  </nav>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Main Content -->
    <div class="lg:col-span-2">
      <h1 class="text-3xl font-bold text-gray-900 mb-6">{art.title} ASCII Art</h1>

      <!-- Large ASCII Display -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
        <div class="bg-gray-50 rounded-md p-6 mb-6 overflow-x-auto">
          <pre class="ascii-content text-lg text-gray-800 select-all">{art.content}</pre>
        </div>

        <button
          class="copy-btn w-full py-3 bg-blue-500 text-white font-medium rounded-lg hover:bg-blue-600 transition-colors cursor-pointer text-lg"
          data-content={art.content}
        >
          Copy to Clipboard
        </button>
      </div>

      <!-- How to Use -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
        <h2 class="text-xl font-bold text-gray-900 mb-4">How to Copy {art.title} ASCII Art</h2>
        <ol class="list-decimal list-inside text-gray-600 space-y-2">
          <li>Click the "Copy to Clipboard" button above</li>
          <li>Open Discord, Twitter, or any messaging app</li>
          <li>Paste using Ctrl+V (Windows) or Cmd+V (Mac)</li>
          <li>Send your message with the ASCII art!</li>
        </ol>
      </div>

      <!-- Where to Use -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h2 class="text-xl font-bold text-gray-900 mb-4">Where to Use {art.title} ASCII Art</h2>
        <ul class="list-disc list-inside text-gray-600 space-y-2">
          <li><strong>Discord</strong> - Server messages, status, and bios</li>
          <li><strong>Twitter/X</strong> - Tweets and profile bios</li>
          <li><strong>Instagram</strong> - Bio and comments</li>
          <li><strong>WhatsApp & Telegram</strong> - Messages to friends</li>
          <li><strong>GitHub</strong> - README files and code comments</li>
          <li><strong>Email</strong> - Fun signatures</li>
        </ul>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="lg:col-span-1">
      <!-- Info Card -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
        <h3 class="font-bold text-gray-900 mb-4">Details</h3>
        <dl class="space-y-3 text-sm">
          <div>
            <dt class="text-gray-500">Category</dt>
            <dd>
              <a href={`/category/${art.category}`} class="text-blue-600 hover:text-blue-800">
                {category?.icon} {category?.name}
              </a>
            </dd>
          </div>
          <div>
            <dt class="text-gray-500">Tags</dt>
            <dd class="flex flex-wrap gap-1 mt-1">
              {art.tags.map((tag) => (
                <span class="px-2 py-1 bg-gray-100 text-gray-600 rounded text-xs">{tag}</span>
              ))}
            </dd>
          </div>
        </dl>
      </div>

      <!-- Ad Slot -->
      <div class="bg-gray-100 border border-dashed border-gray-300 rounded-lg p-4 mb-6 text-center text-gray-400 text-sm h-64 flex items-center justify-center">
        Ad Space (300x250)
      </div>
    </div>
  </div>

  <!-- Related Arts -->
  {relatedArts.length > 0 && (
    <section class="mt-12">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Related {category?.name} ASCII Art</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {relatedArts.map((related) => (
          <AsciiCard
            id={related.id}
            title={related.title}
            content={related.content}
            category={related.category}
            tags={related.tags}
          />
        ))}
      </div>
    </section>
  )}
</BaseLayout>
