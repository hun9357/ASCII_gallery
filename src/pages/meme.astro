  <div
    id="toast"
    class="hidden fixed bottom-4 right-4 bg-gray-900 dark:bg-gray-100 text-white dark:text-gray-900 px-6 py-3 rounded-lg shadow-lg transition-all transform translate-y-0 opacity-100 z-50"
