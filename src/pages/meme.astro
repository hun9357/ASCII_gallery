  "@context": "https://schema.org",
  "@type": "WebApplication",
  "name": "Social Bio Meme Generator",
  "description": description,
  "url": canonicalUrl,
  "applicationCategory": "UtilitiesApplication",
  "operatingSystem": "Any",
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "USD"
  },
  "featureList": [
    "70+ ASCII art templates",
    "23 Unicode text styles",
    "8 template categories",
    "Real-time preview",
    "Platform compatibility check",
    "One-click copy to clipboard",
    "Instagram, Twitter, TikTok, Discord support",
    "No signup required"
  ],
  "browserRequirements": "Requires JavaScript",
  "softwareVersion": "1.0",
  "author": {
    "@type": "Organization",
    "name": "ASCII Art Gallery",
    "url": siteUrl
  }
};
