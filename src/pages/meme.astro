  <!-- Script -->
  <script>
    import { transformText, type TextStyle, platformLimits, checkPlatformCompatibility } from '../utils/textTransform';

    // State
    let currentTemplate = '';
    let currentStyle: TextStyle | 'normal' = 'normal';
    let currentText = '';
    let currentOutput = '';

    // DOM Elements
    const categoryTabs = document.querySelectorAll('.category-tab') as NodeListOf<HTMLButtonElement>;
    const templateCategories = document.querySelectorAll('.template-category') as NodeListOf<HTMLDivElement>;
    const templateBtns = document.querySelectorAll('.template-btn') as NodeListOf<HTMLButtonElement>;
    const styleBtns = document.querySelectorAll('.style-btn') as NodeListOf<HTMLButtonElement>;
    const inputText = document.getElementById('input-text') as HTMLTextAreaElement;
    const charCount = document.getElementById('char-count') as HTMLSpanElement;
    const clearBtn = document.getElementById('clear-btn') as HTMLButtonElement;
    const previewOutput = document.getElementById('preview-output') as HTMLPreElement;
    const copyResultBtn = document.getElementById('copy-result-btn') as HTMLButtonElement;
    const copyBtnText = document.getElementById('copy-btn-text') as HTMLSpanElement;
    const toast = document.getElementById('toast') as HTMLDivElement;
    const toastMessage = document.getElementById('toast-message') as HTMLSpanElement;
    const platformIndicators = document.querySelectorAll('.platform-indicator') as NodeListOf<HTMLDivElement>;
    const selectedTemplateBadge = document.getElementById('selected-template-badge') as HTMLSpanElement;
    const selectedStyleBadge = document.getElementById('selected-style-badge') as HTMLSpanElement;

    // Style display names
    const styleNames: Record<string, string> = {
      normal: 'Normal',
      bold: 'Bold',
      italic: 'Italic',
      boldItalic: 'Bold Italic',
      underline: 'Underline',
      script: 'Script',
      scriptBold: 'Script Bold',
      gothic: 'Gothic',
      gothicBold: 'Gothic Bold',
      doubleStruck: 'Double',
      bubble: 'Bubble',
      bubbleFilled: 'Bubble Fill',
      squared: 'Squared',
      squaredFilled: 'Square Fill',
      parenthesized: 'Parenthesis',
      vaporwave: 'Vaporwave',
      smallCaps: 'Small Caps',
      monospace: 'Mono',
      currency: 'Currency',
      superscript: 'Super',
      sparkle: 'Sparkle',
      strikethrough: 'Strike',
      upsideDown: 'Flip',
      wideSpaced: 'Wide'
    };

    // Show toast notification
    function showToast(message: string) {
      toastMessage.textContent = message;
      toast.classList.remove('hidden');
      setTimeout(() => {
        toast.classList.add('hidden');
      }, 3000);
    }

    // Update preview
    function updatePreview() {
      let text = currentText;

      // Apply text style if not normal
      if (currentStyle !== 'normal' && text) {
        text = transformText(text, currentStyle);
      }

      // Apply template
      if (currentTemplate && text) {
        currentOutput = currentTemplate.replace('${text}', text);
      } else if (text) {
        currentOutput = text;
      } else {
        currentOutput = '';
      }

      // Update preview display
      if (currentOutput) {
        previewOutput.textContent = currentOutput;
        copyResultBtn.disabled = false;
      } else {
        previewOutput.textContent = 'Choose a template and enter text to preview...';
        copyResultBtn.disabled = true;
      }

      // Update platform compatibility
      updatePlatformCompatibility();
    }

    // Update platform compatibility indicators
    function updatePlatformCompatibility() {
      const length = currentOutput.length;

      platformIndicators.forEach((indicator) => {
        const platform = indicator.dataset.platform as keyof typeof platformLimits;
        const statusEl = indicator.querySelector('.platform-status') as HTMLSpanElement;
        const limit = platformLimits[platform].limit;
        const isValid = length <= limit;

        if (length > 0) {
          statusEl.textContent = `${length} / ${limit}`;

          if (isValid) {
            statusEl.classList.remove('bg-red-100', 'dark:bg-red-900/30', 'text-red-700', 'dark:text-red-400');
            statusEl.classList.add('bg-green-100', 'dark:bg-green-900/30', 'text-green-700', 'dark:text-green-400');
          } else {
            statusEl.classList.remove('bg-green-100', 'dark:bg-green-900/30', 'text-green-700', 'dark:text-green-400');
            statusEl.classList.add('bg-red-100', 'dark:bg-red-900/30', 'text-red-700', 'dark:text-red-400');
          }
        } else {
          statusEl.textContent = `- / ${limit}`;
          statusEl.classList.remove('bg-green-100', 'dark:bg-green-900/30', 'text-green-700', 'dark:text-green-400', 'bg-red-100', 'dark:bg-red-900/30', 'text-red-700', 'dark:text-red-400');
          statusEl.classList.add('bg-gray-200', 'dark:bg-gray-700', 'text-gray-600', 'dark:text-gray-400');
        }
      });
    }

    // Category tab click handlers
    categoryTabs.forEach((tab) => {
      tab.addEventListener('click', () => {
        const category = tab.dataset.category;

        // Update tab states
        categoryTabs.forEach(t => {
          t.classList.remove('bg-blue-500', 'text-white', 'shadow-md');
          t.classList.add('bg-gray-100', 'dark:bg-gray-700', 'text-gray-700', 'dark:text-gray-300');
          t.setAttribute('aria-selected', 'false');
        });
        tab.classList.remove('bg-gray-100', 'dark:bg-gray-700', 'text-gray-700', 'dark:text-gray-300');
        tab.classList.add('bg-blue-500', 'text-white', 'shadow-md');
        tab.setAttribute('aria-selected', 'true');

        // Show corresponding template category
        templateCategories.forEach(cat => {
          if (cat.dataset.category === category) {
            cat.style.display = 'block';
          } else {
            cat.style.display = 'none';
          }
        });
      });
    });

    // Initialize first category tab
    if (categoryTabs.length > 0) {
      categoryTabs[0].classList.add('bg-blue-500', 'text-white', 'shadow-md');
      categoryTabs[0].classList.remove('bg-gray-100', 'dark:bg-gray-700', 'text-gray-700', 'dark:text-gray-300');
    }

    // Template button click handlers
    templateBtns.forEach((btn) => {
      btn.addEventListener('click', () => {
        currentTemplate = btn.dataset.template || '';
        const templateName = btn.querySelector('.text-sm.font-medium, span.font-medium')?.textContent || 'Selected';

        // Update button states
        templateBtns.forEach(b => {
          b.classList.remove('border-blue-500', 'bg-blue-50', 'dark:bg-blue-900/30', 'ring-2', 'ring-blue-500');
        });
        btn.classList.add('border-blue-500', 'bg-blue-50', 'dark:bg-blue-900/30', 'ring-2', 'ring-blue-500');

        // Update badge
        selectedTemplateBadge.textContent = templateName;
        selectedTemplateBadge.classList.remove('hidden');

        updatePreview();

        // Track template selection
        if (typeof gtag === 'function') {
          gtag('event', 'select_template', {
            'template_id': btn.dataset.templateId,
          });
        }
      });
    });

    // Style button click handlers
    styleBtns.forEach((btn) => {
      btn.addEventListener('click', () => {
        currentStyle = btn.dataset.style as TextStyle | 'normal';

        // Update button states
        styleBtns.forEach(b => {
          b.classList.remove('border-blue-500', 'bg-blue-100', 'dark:bg-blue-900', 'ring-2', 'ring-blue-500');
        });
        btn.classList.add('border-blue-500', 'bg-blue-100', 'dark:bg-blue-900', 'ring-2', 'ring-blue-500');

        // Update badge
        const styleName = styleNames[currentStyle] || currentStyle;
        selectedStyleBadge.textContent = styleName;
        selectedStyleBadge.classList.remove('hidden');

        updatePreview();

        // Track style selection
        if (typeof gtag === 'function') {
          gtag('event', 'select_style', {
            'style': currentStyle,
          });
        }
      });
    });

    // Initialize normal style as selected
    if (styleBtns.length > 0) {
      styleBtns[0].classList.add('border-blue-500', 'bg-blue-100', 'dark:bg-blue-900', 'ring-2', 'ring-blue-500');
      selectedStyleBadge.textContent = 'Normal';
      selectedStyleBadge.classList.remove('hidden');
    }

    // Input text handler
    inputText.addEventListener('input', () => {
      currentText = inputText.value;
      charCount.textContent = `${currentText.length} / 200 characters`;

      if (currentText.length > 0) {
        clearBtn.classList.remove('hidden');
      } else {
        clearBtn.classList.add('hidden');
      }

      updatePreview();
    });

    // Clear button handler
    clearBtn.addEventListener('click', () => {
      inputText.value = '';
      currentText = '';
      charCount.textContent = '0 / 200 characters';
      clearBtn.classList.add('hidden');
      updatePreview();
    });

    // Copy button handler
    copyResultBtn.addEventListener('click', async () => {
      try {
        await navigator.clipboard.writeText(currentOutput);

        // Update button state
        copyBtnText.textContent = 'Copied!';
        copyResultBtn.classList.remove('bg-blue-500', 'hover:bg-blue-600');
        copyResultBtn.classList.add('bg-green-500', 'hover:bg-green-600');

        setTimeout(() => {
          copyBtnText.textContent = 'Copy to Clipboard';
          copyResultBtn.classList.remove('bg-green-500', 'hover:bg-green-600');
          copyResultBtn.classList.add('bg-blue-500', 'hover:bg-blue-600');
        }, 2000);

        showToast('Copied to clipboard!');

        // Track copy event
        if (typeof gtag === 'function') {
          gtag('event', 'copy_meme', {
            'content_length': currentOutput.length,
            'style': currentStyle,
          });
        }
      } catch (error) {
        showToast('Failed to copy. Please try again.');
        console.error('Copy error:', error);
      }
    });

    // Keyboard shortcuts
    document.addEventListener('keydown', (e) => {
      // Ctrl/Cmd + C to copy when preview is not empty
      if ((e.ctrlKey || e.metaKey) && e.key === 'c' && currentOutput && !copyResultBtn.disabled) {
        if (window.getSelection()?.toString() === '' && document.activeElement !== inputText) {
          e.preventDefault();
          copyResultBtn.click();
        }
      }

      // Escape to clear
      if (e.key === 'Escape' && document.activeElement === inputText) {
        clearBtn.click();
      }
    });
  </script>
