---
import FavoriteButton from './FavoriteButton.astro';

interface Props {
  id: string;
  title: string;
  content: string;
  category: string;
  tags?: string[];
}

const { id, title, content, category, tags = [] } = Astro.props;
---

<article class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden hover:shadow-md transition-all hover:-translate-y-1">
  <div class="p-4">
    <div class="flex items-start justify-between mb-3">
      <h3 class="font-medium text-gray-900 dark:text-gray-100 flex-1">
        <a href={`/art/${id}`} class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
          {title}
        </a>
      </h3>
      <FavoriteButton artId={id} size="sm" />
    </div>

    <div class="bg-gray-50 dark:bg-gray-900 rounded-md p-4 mb-4 overflow-x-auto">
      <pre class="ascii-content text-sm text-gray-800 dark:text-gray-200 select-all">{content}</pre>
    </div>

    <div class="flex items-center justify-between">
      <div class="flex flex-wrap gap-1">
        <a
          href={`/category/${category}`}
          class="text-xs px-2 py-1 bg-blue-100 dark:bg-blue-900 text-blue-700 dark:text-blue-300 rounded-full hover:bg-blue-200 dark:hover:bg-blue-800 transition-colors"
        >
          {category}
        </a>
        {tags.slice(0, 2).map((tag) => (
          <a
            href={`/?tags=${tag}`}
            class="text-xs px-2 py-1 bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300 rounded-full hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors"
          >
            {tag}
          </a>
        ))}
      </div>

      <button
        class="copy-btn px-4 py-2 bg-blue-500 text-white text-sm font-medium rounded-md hover:bg-blue-600 active:bg-green-500 transition-colors cursor-pointer flex items-center gap-2"
        data-content={content}
      >
        <span class="copy-text">Copy</span>
        <svg class="copy-check w-4 h-4 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
      </button>
    </div>
  </div>
</article>
