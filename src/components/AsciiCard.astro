---
interface Props {
  id: string;
  title: string;
  content: string;
  category: string;
  tags?: string[];
}

const { id, title, content, category, tags = [] } = Astro.props;
---

<article class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-shadow">
  <div class="p-4">
    <h3 class="font-medium text-gray-900 mb-3">
      <a href={`/art/${id}`} class="hover:text-blue-600 transition-colors">
        {title}
      </a>
    </h3>

    <div class="bg-gray-50 rounded-md p-4 mb-4 overflow-x-auto">
      <pre class="ascii-content text-sm text-gray-800 select-all">{content}</pre>
    </div>

    <div class="flex items-center justify-between">
      <div class="flex flex-wrap gap-1">
        <a
          href={`/category/${category}`}
          class="text-xs px-2 py-1 bg-blue-100 text-blue-700 rounded-full hover:bg-blue-200 transition-colors"
        >
          {category}
        </a>
      </div>

      <button
        class="copy-btn px-4 py-2 bg-blue-500 text-white text-sm font-medium rounded-md hover:bg-blue-600 transition-colors cursor-pointer"
        data-content={content}
      >
        Copy
      </button>
    </div>
  </div>
</article>
