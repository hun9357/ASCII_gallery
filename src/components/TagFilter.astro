---
import asciiArts from '../data/ascii-arts.json';

interface Props {
  selectedTags?: string[];
}

const { selectedTags = [] } = Astro.props;

// Count occurrences of each tag
const tagCounts = new Map<string, number>();
asciiArts.arts.forEach(art => {
  art.tags.forEach(tag => {
    tagCounts.set(tag, (tagCounts.get(tag) || 0) + 1);
  });
});

// Sort tags by frequency (most used first)
const sortedTags = [...tagCounts.entries()]
  .sort((a, b) => b[1] - a[1])
  .map(([tag, count]) => ({ tag, count }));

// Split into popular (top 12) and rest
const popularTags = sortedTags.slice(0, 12);
const moreTags = sortedTags.slice(12);
const hasMoreTags = moreTags.length > 0;
---

<div class="mb-8">
  <!-- Selected Tags Section -->
  {selectedTags.length > 0 && (
    <div class="mb-4 p-4 bg-blue-50 dark:bg-blue-900/20 rounded-xl border border-blue-100 dark:border-blue-800">
      <div class="flex items-center justify-between mb-3">
        <span class="text-sm font-medium text-blue-700 dark:text-blue-300 flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
          </svg>
          Active Filters
          <span class="bg-blue-500 text-white text-xs px-2 py-0.5 rounded-full">{selectedTags.length}</span>
        </span>
        <a
          href="/"
          class="text-sm text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 transition-colors flex items-center gap-1 group"
        >
          <span>Clear all</span>
          <svg class="w-4 h-4 group-hover:rotate-90 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </a>
      </div>

      <div class="flex flex-wrap gap-2">
        {selectedTags.map((tag) => {
          const count = tagCounts.get(tag) || 0;
          // Create URL without this tag
          const remainingTags = selectedTags.filter(t => t !== tag);
          const removeUrl = remainingTags.length > 0
            ? `/?tags=${remainingTags.join(',')}`
            : '/';

          return (
            <a
              href={removeUrl}
              class="selected-tag group inline-flex items-center gap-1.5 px-3 py-1.5 bg-blue-500 text-white rounded-full text-sm font-medium hover:bg-blue-600 transition-all hover:shadow-md"
            >
              <span>{tag}</span>
              <span class="text-blue-200 text-xs">({count})</span>
              <svg class="w-3.5 h-3.5 opacity-60 group-hover:opacity-100 group-hover:scale-110 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </a>
          );
        })}
      </div>
    </div>
  )}

  <!-- Browse Tags Section -->
  <div class="flex items-center justify-between mb-3">
    <h2 class="text-base font-semibold text-gray-900 dark:text-gray-100 flex items-center gap-2">
      <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
      </svg>
      Browse by Tag
    </h2>
    {hasMoreTags && (
      <button
        id="toggle-more-tags"
        class="text-sm text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 transition-colors flex items-center gap-1"
      >
        <span id="toggle-text">Show all ({sortedTags.length})</span>
        <svg id="toggle-icon" class="w-4 h-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
      </button>
    )}
  </div>

  <!-- Popular Tags -->
  <div class="flex flex-wrap gap-2" id="popular-tags">
    {popularTags.map(({ tag, count }) => {
      const isSelected = selectedTags.includes(tag);
      // Create URL with this tag toggled
      const newTags = isSelected
        ? selectedTags.filter(t => t !== tag)
        : [...selectedTags, tag];
      const tagUrl = newTags.length > 0
        ? `/?tags=${newTags.join(',')}`
        : '/';

      return (
        <a
          href={tagUrl}
          class:list={[
            "tag-pill group inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full text-sm font-medium transition-all duration-200",
            isSelected
              ? "bg-blue-500 text-white shadow-md scale-105"
              : "bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700 hover:shadow-sm hover:scale-[1.02]"
          ]}
        >
          <span>{tag}</span>
          <span class:list={[
            "text-xs px-1.5 py-0.5 rounded-full transition-colors",
            isSelected
              ? "bg-blue-400/50 text-white"
              : "bg-gray-200 dark:bg-gray-700 text-gray-500 dark:text-gray-400 group-hover:bg-gray-300 dark:group-hover:bg-gray-600"
          ]}>
            {count}
          </span>
        </a>
      );
    })}
  </div>

  <!-- More Tags (Hidden by default) -->
  {hasMoreTags && (
    <div id="more-tags" class="hidden mt-3 pt-3 border-t border-gray-200 dark:border-gray-700">
      <div class="flex flex-wrap gap-2">
        {moreTags.map(({ tag, count }) => {
          const isSelected = selectedTags.includes(tag);
          const newTags = isSelected
            ? selectedTags.filter(t => t !== tag)
            : [...selectedTags, tag];
          const tagUrl = newTags.length > 0
            ? `/?tags=${newTags.join(',')}`
            : '/';

          return (
            <a
              href={tagUrl}
              class:list={[
                "tag-pill group inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full text-sm font-medium transition-all duration-200",
                isSelected
                  ? "bg-blue-500 text-white shadow-md scale-105"
                  : "bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700 hover:shadow-sm hover:scale-[1.02]"
              ]}
            >
              <span>{tag}</span>
              <span class:list={[
                "text-xs px-1.5 py-0.5 rounded-full transition-colors",
                isSelected
                  ? "bg-blue-400/50 text-white"
                  : "bg-gray-200 dark:bg-gray-700 text-gray-500 dark:text-gray-400 group-hover:bg-gray-300 dark:group-hover:bg-gray-600"
              ]}>
                {count}
              </span>
            </a>
          );
        })}
      </div>
    </div>
  )}

  <!-- Quick Stats -->
  <div class="mt-4 flex items-center gap-4 text-xs text-gray-500 dark:text-gray-400">
    <span class="flex items-center gap-1">
      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
      </svg>
      {sortedTags.length} tags
    </span>
    <span class="flex items-center gap-1">
      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
      </svg>
      {asciiArts.arts.length} arts
    </span>
  </div>
</div>

<script>
  const toggleBtn = document.getElementById('toggle-more-tags');
  const moreTags = document.getElementById('more-tags');
  const toggleText = document.getElementById('toggle-text');
  const toggleIcon = document.getElementById('toggle-icon');

  if (toggleBtn && moreTags && toggleText && toggleIcon) {
    let isExpanded = false;

    toggleBtn.addEventListener('click', () => {
      isExpanded = !isExpanded;

      if (isExpanded) {
        moreTags.classList.remove('hidden');
        moreTags.classList.add('animate-fade-in');
        toggleText.textContent = 'Show less';
        toggleIcon.classList.add('rotate-180');
      } else {
        moreTags.classList.add('hidden');
        moreTags.classList.remove('animate-fade-in');
        toggleText.textContent = `Show all (${moreTags.querySelectorAll('.tag-pill').length + document.querySelectorAll('#popular-tags .tag-pill').length})`;
        toggleIcon.classList.remove('rotate-180');
      }
    });
  }
</script>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-8px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 0.2s ease-out;
  }
</style>
